{% extends sonata_block.templates.block_base %}

{% block block %}
    {% if comments %}
        <div class="cs-comments">
            <ul>
                {% for comment in comments %}
                    {% if 'valid' == comment.status %}
                        <li>
                            <div class="cs-text">
                                <h6>
                                    <a href="{{ path('tour_detail', { 'categorySlug': comment.tour.category.slug,'slug': comment.tour.slug }) }}">
                                        {{ comment.tour.tourName }}
                                    </a>
                                </h6>
                                <p>
                                    {{ comment.content }}
                                </p>
                            </div>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
    {% endif %}
{% endblock %}