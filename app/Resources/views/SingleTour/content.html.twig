{% extends 'base.html.twig' %}

{% block title %}{{ tour.tourName }}{% endblock %}

{% block body_class %}{{ parent() }} single-trip {% endblock %}

{% block sub_header %}{% endblock %}

{% block body %}
    <ul class="cs-list-detail-slider">
        {% if not tour.backgrounds.empty %}
            {% for background in tour.backgrounds %}
                <img src="{% path background.media, 'reference' %}">
            {% endfor %}
        {% else %}
            <img src="{{ absolute_url(asset('assets/frontend/images/tour-slide-1.jpg')) }}">
        {% endif %}
    </ul>

    <div class="cs-fixed-sub-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="cs-page-title">
                        <h1>{{ tour.tourName }}</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Start -->
    <div class="main-section">
        <div class="tour-detail-holder">
            <div class="page-section">
                <div class="container">
                    <div class="row">
                        <aside class="page-sidebar col-lg-3 col-md-3 col-sm-12 col-xs-12" id="filtration_sidebar">
                            <div class="cs-tourdetial-search">
                                <div class="cs-tourdetial-holder">
                                    <div class="cs-price">
                                        {{ contentPriceHtml(tour.regularPrice, tour.salePrice)|raw }}
                                    </div>

                                    <div class="cs-search">
                                        <div class="package-info-wrapper">
                                            {{ render(controller('AppBundle:Tour:bookingForm', {'tour' : tour})) }}

                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <div class="package-info">
                                                    <i class="icon-users"></i>

                                                    <span class="head">{{ 'tour_detail.number_of_guess'|trans }}:</span>
                                                    {{ tour.numberOfPeople }}
                                                </div>
                                            </div>

                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                <div class="package-info">
                                                    {# http://stackoverflow.com/questions/15657687/twig-date-difference #}
                                                    {#{% set difference = date(tour.endDate).diff(date(tour.startDate)) %}#}
                                                    {#{% set lefDays = difference.days %}#}
                                                    <i class="icon-calendar"></i>

                                                    <span class="head">Thời gian:</span> {{ tour.duration }} ngày
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </aside>

                        <div class="page-content col-lg-9 col-md-9 col-sm-12 col-xs-12">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="cs-list-short" id="short_list">
                                        <ul class="cs-list-highlights">
                                            <li><a href="#overview">{{ 'tour_detail.overview'|trans }}</a></li>
                                            <li><a href="#gallery">{{ 'tour_detail.gallery'|trans }}</a></li>
                                            <li><a href="#reviews">{{ 'tour_detail.reviews'|trans }}</a></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="row">
                                        <div class="cs-list-detail" id="overview">
                                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                                {{ tour.description | raw }}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="page-section">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12"></div>

                        <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
                            <div class="cs-list-detail light-box" id="gallery">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="cs-section-title">
                                            <h3></h3>
                                        </div>
                                    </div>

                                    {% if tour.gallery %}
                                        {% for media in tour.gallery.galleryHasMedias %}
                                            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                                <div class="cs-trip-gallery">
                                                    <div class="cs-media">
                                                        <figure>
                                                            <a href="{% path media.media, 'reference' %}"
                                                               rel="prettyPhoto[gallery2]"
                                                               data-rel="prettyPhoto[0]">
                                                                <img src="{% path media.media, 'reference' %}" alt="">
                                                            </a>
                                                            <figcaption></figcaption>
                                                        </figure>

                                                        <span><i class="icon-search2"></i></span>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="page-section" style="padding:60px 0 40px 0; background:#f7f7f7;">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12"></div>

                        <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
                            <div class="cs-section-title">
                                <h3>{{ 'tour_detail.customer_reviews'|trans }}</h3>
                            </div>

                            <div class="cs-list-detail" id="reviews">
                                <ul class="grid effect-2" id="grid">
                                    {% for comment in tour.comments %}
                                        <li class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                            <div class="cs-testimonial">
                                                <div class="author-detail">
                                                    <div class="cs-media">
                                                        <figure>
                                                            <img src="http://traveladvisor.chimpgroup.com/wp-content/uploads/xreview-img-4.jpg.pagespeed.ic.M3vio9WmQC.webp"
                                                                 alt="">
                                                        </figure>

                                                        <strong class="author-name">
                                                            <span>{{ comment.user.lastname ~ comment.user.firstname }}</span>
                                                        </strong>
                                                    </div>
                                                </div>

                                                <div class="question-mark">
                                                    <p>{{ comment.content }}</p>
                                                </div>
                                            </div>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>

                            {{ render(controller('AppBundle:Tour:commentForm', {'tour' : tour})) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="page-section">
            <div id="itinerary">

            </div>
        </div>
    </div>

{% endblock %}