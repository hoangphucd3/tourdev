{% extends "SonataUserBundle:Profile:action.html.twig" %}

{% block sonata_profile_title %}
    Các tour đã đặt
{% endblock %}

{% block sonata_profile_content %}
    {% if orders %}
        <div class="cs-shortcode-table">
            <div class="cs-table-responsive">
                <table>
                    <thead>
                    <tr>
                        <th>Tên tour</th>
                        <th>Ngày khởi hành</th>
                        <th>Giá</th>
                        <th>Tình trạng</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for order in orders %}
                        <tr>
                            <td>
                                <a href="{{ path('profile_tour_order_detail', { 'tourOrderId': order.id }) }}">{{ order.tour.tourName }}</a>
                            </td>
                            <td>
                                {{ order.tour.startDate|date('d/m/Y') }}
                            </td>
                            <td>
                                {{ order.invoice.totalPrice|priceFilter|raw }}
                            </td>
                            <td>
                                {{ order.status|orderStatus }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}
{% endblock %}