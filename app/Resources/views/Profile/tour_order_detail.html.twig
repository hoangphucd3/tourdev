{% extends "SonataUserBundle:Profile:action.html.twig" %}

{% block sonata_profile_title %}
    Tour của bạn
{% endblock %}

{% block sonata_profile_content %}
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="widget widget-tour-info">
            <div class="widget-title">
                <h4>
                    Thông tin đặt tour
                </h4>
            </div>

            <div class="widget-content booking-item-payment">
                <header class="clearfix">
                    <div class="cs-media">
                        <img src="{% path  orderDetail.tour.featuredImage, 'reference' %}" width="150"
                             height="113">
                    </div>

                    <div class="cs-title">
                        {{ orderDetail.tour.tourName }}
                    </div>
                </header>
                <ul class="booking-item-payment-details">
                    <li>
                        <div class="booking-item-payment-title">
                            Ngày khởi hành
                        </div>

                        <div class="booking-item-payment-content">
                            {{ orderDetail.departure|date('d-m-Y') }}
                        </div>
                    </li>

                    <li>
                        <div class="booking-item-payment-title">
                            Người lớn
                        </div>

                        <div class="booking-item-payment-content">
                            {{ orderDetail.adults }}
                        </div>
                    </li>

                    <li>
                        <div class="booking-item-payment-title">
                            Trẻ em
                        </div>

                        <div class="booking-item-payment-content">
                            {% if orderDetail.children %}{{ orderDetail.children }}{% else %}0{% endif %}
                        </div>
                    </li>

                    <li>
                        <div class="booking-item-payment-title">
                            Em bé
                        </div>

                        <div class="booking-item-payment-content">
                            {% if orderDetail.infants %}{{ orderDetail.infants }}{% else %}0{% endif %}
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align: center">
        <a class="cs-button large btn-primary"
           href="{{ path("profile_tour_order_edit", {'tourOrderId': orderDetail.id}) }}">
            Yêu cầu chỉnh sửa
        </a>

        <a class="cs-button large btn-danger" target="_blank" href="#">
            Hủy tour
        </a>
    </div>
{% endblock %}