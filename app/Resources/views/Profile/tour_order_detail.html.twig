{% extends "SonataUserBundle:Profile:action.html.twig" %}

{% block sonata_profile_title %}
    Tour của bạn
{% endblock %}

{% block sonata_profile_content %}
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" xmlns="http://www.w3.org/1999/html">
        <div class="widget widget-tour-info">
            <div class="widget-title">
                <h4>
                    Thông tin đặt tour
                </h4>
            </div>

            <div class="widget-content booking-item-payment">
                <header class="clearfix">
                    <div class="cs-media">
                        <img src="{% path  orderDetail.tour.featuredImage, 'reference' %}" width="150"
                             height="113">
                    </div>

                    <div class="cs-title">
                        {{ orderDetail.tour.tourName }}
                    </div>
                </header>
                <ul class="booking-item-payment-details">
                    <li>
                        <div class="booking-item-payment-title">
                            Ngày khởi hành
                        </div>

                        <div class="booking-item-payment-content">
                            {{ orderDetail.tour.startDate|date('d/m/Y') }}
                        </div>
                    </li>

                    <li>
                        <div class="booking-item-payment-title">
                            Người lớn
                        </div>

                        <div class="booking-item-payment-content">
                            {{ orderDetail.numberOfAdults }}
                        </div>
                    </li>

                    <li>
                        <div class="booking-item-payment-title">
                            Trẻ em
                        </div>

                        <div class="booking-item-payment-content">
                            {{ orderDetail.numberOfChildren }}
                        </div>
                    </li>

                    <li>
                        <div class="booking-item-payment-title">
                            Em bé
                        </div>

                        <div class="booking-item-payment-content">
                            {{ orderDetail.numberOfInfants }}
                        </div>
                    </li>
                </ul>

                {% set tourPrice = 0 %}
                {% if orderDetail.tour.salePrice %}
                    {% set tourPrice = orderDetail.tour.salePrice %}
                {% else %}
                    {% set tourPrice = orderDetail.tour.regularPrice %}
                {% endif %}
                <div class="booking-item-payment-total">
                    <table border="0" class="table_checkout">
                        <tbody>
                        {#<tr>#}
                        {#<td>Người lớn</td>#}
                        {#<td class="text-right">#}
                        {#{% set adultPrice = tourPrice * orderDetail.numberOfAdults %}#}
                        {#<strong>{{ adultPrice|priceFilter|raw }}</strong></td>#}
                        {#</tr>#}
                        {#<tr>#}
                        {#<td>Trẻ em</td>#}
                        {#<td class="text-right">#}
                        {#{% set childrenPrice = (tourPrice * orderDetail.numberOfInfants)/1.5 %}#}
                        {#<strong>{{ childrenPrice|priceFilter|raw }}</strong></td>#}
                        {#</tr>#}
                        {#<tr>#}
                        {#<td>Em bé</td>#}
                        {#<td class="text-right"><strong>{{ 0|priceFilter|raw }}</strong></td>#}
                        {#</tr>#}
                        <tr>
                            <td><strong>Tổng cộng</strong></td>
                            <td class="text-right"><strong>{{ orderDetail.invoice.totalPrice|priceFilter|raw }}</strong>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align: center">
        {% if "pending" == orderDetail.invoice.status %}
            {% set totalPrice = orderDetail.invoice.totalPrice %}
            <a class="cs-button large" style="background-color: #0065b8 !important" href="{{ path('onepay_checkout_url', {'price' : totalPrice, 'orderId': orderDetail.id}) }}">
                Thanh toán OnePay
            </a>
        {% endif %}
        <a class="cs-button large" style="background-color: #0065b8 !important"
           href="{{ path("profile_tour_order_edit", {'tourOrderId': orderDetail.id}) }}">
            Yêu cầu chỉnh sửa
        </a>

        {{ render(controller('AppBundle:User:tourOrderDeleteForm', { 'tourOrder':orderDetail })) }}
    </div>
{% endblock %}